<div class="container body-content">

    <h1>@ViewBag.title</h1>

    <form action="/search/results" method="post">
        <h2>Search by:</h2>

        <p>
            @foreach (var column in ViewBag.columns)
            {
                <span>
                    <input type="radio" name="searchType" id="@column.Key" value="@column.Key" checked="@column.Key == 'all'" />
                    <label for="@column.Key">@column.Value</label>
                </span>
            }

        </p>

        <p>
            <label for="searchTerm">Keyword:</label>
            <input type="text" name="searchTerm" id="searchTerm" />
        </p>

        <input type="submit" value="Search" />
    </form>

    <hr />

    <h1>@ViewBag.title</h1>


    @if (ViewBag.jobs != null)
    {
        <h3>@ViewBag.jobs.Count Result(s)</h3>
        <table class="tablejob-listing">

            @foreach (var job in ViewBag.jobs)          @*need to tie in the selection above somehow*@
            {
                <tr>
                    <td>
                        ID:  @job.Id
                        <br />
                        Name:  @job.Name
                        <br />
                        Employer:
                        @job.Employer
                        <br />
                        Location:
                        @job.Location
                        <br />
                        Position Type:
                        @job.PositionType
                        <br />
                        Skills:
                        @job.CoreCompetency
                    </td>
                </tr>
            }
        </table>

    }

</div>
